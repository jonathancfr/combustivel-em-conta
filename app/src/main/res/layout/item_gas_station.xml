<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gas_station_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    cardView:contentPadding="8dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <!-- DIVISOR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- GasStation info and Price -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="8dp">

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/gas_station_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="1. Nome do Posto"
                app:typeface="roboto_regular"
                android:textSize="18dp"
                android:textColor="@color/textPrimary" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/gas_station_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/gas_station_name"
                android:text="Text2"
                app:typeface="roboto_light"
                android:textSize="14sp"
                android:textColor="@color/textSecondary" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/gas_station_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/gas_station_address"
                android:text="Text3"
                app:typeface="roboto_light"
                android:textSize="14sp"
                android:textColor="@color/textSecondary" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/fuel_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="R$ 3,45"
                app:typeface="roboto_bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fuel_price"
                android:layout_alignParentEnd="true"
                android:text="Hoje"
                app:typeface="roboto_light"
                android:textSize="14sp"
                android:textColor="@color/textSecondary" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="4dp"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".30">

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/fuel_1_price"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$ 3,45"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|center_vertical"
                    app:typeface="roboto_bold"
                    android:textColor="@color/textPrimary"
                    android:textSize="18sp" />

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/fuel_1_type"
                    android:layout_below="@+id/fuel_1_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aditivada"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|center_vertical"
                    app:typeface="roboto_condensed_light"
                    android:textColor="@color/textSecondary"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".30">

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/fuel_2_price"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|center_vertical"
                    app:typeface="roboto_bold"
                    android:textColor="@color/textPrimary"
                    android:textSize="18sp" />

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/fuel_2_type"
                    android:layout_below="@+id/fuel_2_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aditivada"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|center_vertical"
                    app:typeface="roboto_condensed_light"
                    android:textColor="@color/textSecondary"
                    android:textSize="16sp"/>
            </RelativeLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".30">

                <com.devspark.robototextview.widget.RobotoTextView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/fuel_3_price"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|center_vertical"
                    app:typeface="roboto_bold"
                    android:textColor="@color/textPrimary"
                    android:textSize="18sp" />

                <com.devspark.robototextview.widget.RobotoTextView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/fuel_3_type"
                    android:layout_below="@+id/fuel_3_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aditivada"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|center_vertical"
                    app:typeface="roboto_condensed_light"
                    android:textColor="@color/textSecondary"
                    android:textSize="16sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".10"
                android:gravity="end">

                <ImageButton
                    android:id="@+id/gas_station_add_price_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center|center_vertical"
                    android:src="@drawable/add_price"
                    style="@style/Base.Widget.AppCompat.ActionButton"
                    android:contentDescription="@string/add" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>