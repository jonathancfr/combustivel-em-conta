                    <!--android:textAlignment="center"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:gravity="center|center_vertical" />-->
            <!--</RelativeLayout>-->
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

